{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "islasgeci.org/schemas/analyses-schema",
  "title": "Esquema para validar lista de an√°lisis",
  "type": "array",
  "items": {
    "type": "object",
    "required": [
      "name",
      "description",
      "image_tag",
      "report",
      "results",
      "scripts",
      "data",
      "requirements"
    ],
    "properties": {
      "name": {
        "type": "string"
      },
      "description": {
        "type": "string"
      },
      "image_tag": {
        "type": "string",
        "pattern": "^[a-zA-Z0-9]{4}$"
      },
      "docker_parent_image": {
        "type": "string",
        "pattern": "^islasgeci/"
      },
      "report": {
        "type": "string"
      },
      "results": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "scripts": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "data": {
        "type": "array",
        "items": {
          "type": "object",
          "required": [
            "source",
            "filename",
            "version"
          ],
          "properties": {
            "source": {
              "type": "string"
            },
            "filename": {
              "oneOf": [
                {
                  "type": "string"
                },
                {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              ]
            },
            "version": {
              "type": "string"
            }
          }
        }
      },
      "requirements": {
        "type": "array",
        "items": {
          "type": "object",
          "required": [
            "type",
            "name"
          ],
          "properties": {
            "type": {
              "type": "string",
              "enum": [
                "python",
                "r",
                "system"
              ]
            },
            "name": {
              "oneOf": [
                {
                  "type": "string"
                },
                {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                }
              ]
            },
            "version": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}